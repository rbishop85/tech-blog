<main class="container">

{{#each posts as |post| }}
<div class="container d-flex justify-content-center my-5">
  <div class="card" style="width: 80%;">
    <a href="/post/{{id}}" class="link-dark text-decoration-none">
      <div class="card-body">
        <div class="card-title d-flex justify-content-between">
          <h5>{{title}}</h5>
          <span>Author: {{capitalize user.username}}</span>
          <span>Posted: {{format_date createdAt}}</span>
        </div>
        <p class="card-text">{{format_content content}}</p>
      </div>
    </a>
  </div>
</div>
{{/each}}

</main>

<main class="container">

{{#each posts as |post| }}
<div class="container d-flex justify-content-center my-5">
  <div class="card" style="width: 80%;">
    <a href="/post/{{id}}" class="link-dark text-decoration-none">
      <div class="card-body">
        <div class="card-title d-flex justify-content-center">
          <h5>{{title}}</h5>
        </div>
        <hr class="my-1">
        <p class="card-text">{{format_content content}}</p>
        <hr class="my-1">
        <div class="card-title d-flex justify-content-between">
          <div class="d-flex align-items-center">
            <span>Author: {{capitalize user.username}}</span>
          </div>
          <div class="d-flex flex-column align-items-end">
            <div>
              <small class="col text-muted">Posted: {{format_date createdAt}}</small>
            </div>
            <div>
              <small class="col text-muted">Updated: {{format_date updatedAt}}</small>
            </div>
          </div>
        </div>
      </div>
    </a>
  </div>
</div>
{{/each}}

</main>

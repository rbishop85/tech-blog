<main class="container justify-content-center">

  {{!-- Loads data for every Post on site --}}
  {{#each posts as |post|}}
    <div class="container d-flex justify-content-center my-5">
      <div class="card mb-4 bg-dark" style="width: 80%;">
        <div class="py-3 bg-dark"></div>
        <div class="card-body bg-light">
          <div class="small text-muted d-flex justify-content-between">
            <div>
              {{!-- Uses helper function to format date --}}
              <span>{{format_date_short createdAt}}</span>
            </div>
            <div class="d-flex align-items-center">
              {{!-- Uses helper function to capitalize username --}}
              <span>By: {{capitalize user.username}}</span>
            </div>
          </div>
          <h2 class="card-title">{{title}}</h2>
          <hr class="my-1" />
          {{!-- Uses helper function to only show a portion of the content if it's over a certain length. --}}
          <p class="card-text">{{format_content content}}</p>
          <hr class="my-1" />
          {{!-- Button to load individual post's page, includes that post's id --}}
          <a class="btn btn-info" href="/post/{{id}}">Read more â†’</a>
        </div>
      </div>
    </div>
  {{/each}}

</main>
<main class="container">

  <div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
      <div class="align-self-start col-md-10 mx-auto col-lg-4">
        <div class="p-3 p-md-5 border rounded-3 bg-light my-4">
          <div class="form-floating mb-3 text-center">
            {{!-- Utilizes helper function to capitalize username --}}
            <h3>{{capitalize username}}'s Dashboard</h3>
          </div>
          <hr class="my-4" />
          {{!-- Link to creating new post --}}
          <a class="w-100 btn btn-lg btn-info" href="/newpost">New Blog Post</a>
        </div>
      </div>
      <div class="col-lg-8 text-center text-lg-start">
        <h1 class="display-6 text-center fw-bold lh-1 mb-3">My Blog Posts:</h1>
        {{!-- Loaded html content for each post that signed in user has --}}
        {{#each posts as |post|}}
          <div class="container d-flex justify-content-center my-5">
            <div class="card mb-4 bg-dark" style="width: 100%;">
              <div class="py-3 bg-dark"></div>
              <div class="card-body bg-light">
                <h2 class="card-title">{{title}}</h2>
                <hr class="my-1" />
                <div class="d-flex justify-content-between align-items-center">
                  {{!-- Link to editing post that includes post's id --}}
                <a class="btn btn-outline-info px-3" href="/edit/{{id}}">Edit â†’</a>
                  <div class="d-flex flex-column align-items-end">
                    <div>
                      <small class="col text-muted">Posted:
                        {{format_date createdAt}}</small>
                    </div>
                    <div>
                      <small class="col text-muted">Updated:
                        {{format_date updatedAt}}</small>
                    </div>
                  </div>
                  </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>

</main>
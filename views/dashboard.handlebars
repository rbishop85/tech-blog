<main class="container">

<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
        <div class="align-self-start col-md-10 mx-auto col-lg-4">
            <div class="p-3 p-md-5 border rounded-3 bg-light my-4">
                <div class="form-floating mb-3 text-center">
                    <h3>{{capitalize username}}'s Dashboard</h3>
                </div>
                <hr class="my-4">
                <a class="w-100 btn btn-lg btn-info" href="/newpost">New Blog Post</a>
            </div>
        </div>
        <div class="col-lg-8 text-center text-lg-start">
            <h1 class="display-6 text-center fw-bold lh-1 mb-3">My Blog Posts:</h1>
            {{#each posts as |post| }}
            <div class="col my-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <p class="card-text fw-bold fs-6">{{title}}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a class="btn btn-sm btn-outline-info px-3" href="/edit/{{id}}">Edit</a>
                            </div>
                            <div class="d-flex flex-column align-items-end">
                                <div>
                                    <small class="col text-muted">Posted: {{format_date createdAt}}</small>
                                </div>
                                <div>
                                    <small class="col text-muted">Updated: {{format_date updatedAt}}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

</main>
<div class="align-items-center form-background">
    <div class="container text-center">
        <form id="form-editPost">
            <h3 class="mb-3 font-weight-normal">Edit Blog Post!</h3>
            <div class="form-group my-3">
                <label for="postTitle" class="visually-hidden">Blog Title</label>
                <textarea class="form-control" id="postTitle" rows="1" placeholder="Blog Title:" style="resize: none;" required autofocus>{{title}}</textarea>
            </div>
            <div class="form-group my-3">
                <label for="postContent" class="visually-hidden">Blog Content</label>
                <textarea class="form-control" id="postContent" rows="10" placeholder="Blog Content:" style="resize: none;" required>{{content}}</textarea>
            </div>
            <div>
                <button class="btn btn-lg btn-info mb-3" id="editPost" data-id="{{id}}">Submit Blog Edit</button>
            </div>
            <div>
                <button type="button"  class="btn btn-lg btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal">Delete Blog Post</button>
            </div>
        </form>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal"  data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark border border-5 border-dark">
      <div class="modal-header bg-secondary">
        <h5 class="modal-title" id="exampleModalLabel">Are you sure you wish to delete this blog post?</h5>
      </div>
      <div class="modal-footer bg-secondary">
        <button type="button" class="btn btn-danger" id="deletePost" data-id="{{id}}">Delete</button>
        <button type="button" class="btn btn-info" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>


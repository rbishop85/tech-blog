<main class="container">

<div class="container d-flex justify-content-center my-5">
  <div class="card" style="width: 80%;">
    <div class="card-body">
      <div class="card-title d-flex justify-content-between">
        <h5>{{title}}</h5>
        <span>Author: {{user.username}}</span>
        <span>Posted: {{format_date createdAt}}</span>
      </div>
      <pre class="card-text">{{content}}</pre>
    </div>
  </div>
</div>

{{#if comments.length}}
<p>Comments:</p>

{{#each comments as |comment|}}
<div class="container d-flex justify-content-center my-1">
  <div class="card" style="width: 70%;">
    <div class="card-body">
      <div class="card-title d-flex justify-content-between">
        <h5>{{title}}</h5>
        <span>Commentor: {{user.username}}</span>
        <span>Posted: {{format_date created_at}}</span>
      </div>
      <p class="card-text">{{content}}</p>
    </div>
  </div>
</div>
{{/each}}

{{/if}}

</main>

